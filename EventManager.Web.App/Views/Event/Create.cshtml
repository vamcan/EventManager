@model CreateEventViewModel
@{
    ViewBag.Title = "Create New Event";
}



<h2>Create New Event</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" type="text" class="form-control" />

            </div>

            <div class="form-group">

                <label asp-for="StartTime" class="control-label"></label>
                <input readonly="readonly" id="StartTime" asp-for="StartTime" type="text" class="form-control datepicker" />


            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input readonly="readonly" id="EndTime" asp-for="EndTime" type="text" class="form-control datepicker" />

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" type="text" class="form-control" />

            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<br />
